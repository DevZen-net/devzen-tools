{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/code"
  },
  "include": [
    "src/code/**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "dist/**/*",
    "DRAFT",
    "src/docs/**/*",
    "src/**/*ts-ignore*",
    "**/*-spec*.ts",
    "**/**drafts**",
    "**/__tests__/**",
    "**/test-utils/**"
  ]
}
