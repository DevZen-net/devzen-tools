{
  "name": "@neozen/distzen",
  "version": "1.0.0-alpha.2",
  "description": "Install & watch clean/copy/sync multiple local packages, production-level via `npm i`, without symlinks, in a snap!",
  "scripts": {
    "****************** A CLI Global Setup *****": "",
    "################# Running ": "",
    "### dev: build & test in watch, in separate Konsoles!": "",
    "#fdev": "npm run dev",
    "dev": "t -npr 'start!' 'test!'",
    "start": "npm-run-all build test",
    "start!": "npm run build!",
    "################# Testing ": "",
    "test": "npx jest --runInBand --detectOpenHandles --verbose --forceExit",
    "test:ci": "npx jest --coverage --ci --reporters=default --reporters=jest-junit --runInBand --detectOpenHandles --forceExit",
    "test!": "npx jest --runInBand --watchAll --no-cache",
    "test:coverage": "nyc --reporter=lcov --reporter=html npm test && nyc report",
    "################# Build & Typescript": "",
    "build": "npm-run-all build:ts",
    "build:ts": "npx mkdirp dist && npx tsc --listEmittedFiles --project tsconfig.json",
    "build:ts!": "npx mkdirp dist && npx tsc --listEmittedFiles --watch --project tsconfig.json",
    "build!": "npm-run-all --parallel build:ts! distzen!",
    "################# Clean, Chores and installing": "",
    "audit": "npm audit",
    "audit:fix": "npm audit fix",
    "clean": "npx rimraf -g dist coverage .nyc_output result junit.xml tmp tsconfig.*.tsbuildinfo",
    "postinstall": "npx patch-package --error-on-fail --error-on-warn",
    "distzen": "npx distzen",
    "distzen!": "npx distzen --watch",
    "unlock": "rimraf package-lock.json",
    "################# Formatting & Linting": "",
    "format": "npm-run-all prettier lint:noFail prettier",
    "prettier": "npx prettier --write \"**/*.{ts,js,json}\"",
    "lint": "npx eslint --ignore-path .gitignore \"**/*.{js,ts}\"",
    "lint:fix": "npx eslint --fix --ignore-path .gitignore \"**/*.{js,ts}\"",
    "lint:noFail": "npx eslint --fix --ignore-path .gitignore \"**/*.{js,ts}\" || exit 0"
  },
  "localDependencies": {
    "@neozen/logzen": "../logzen",
    "@neozen/zen": "../zen",
    "@neozen/validzen": "../validzen",
    "@neozen/speczen": "../speczen"
  },
  "# comments for patch-package & bundleDependencies ;-)": {
    "get around with prepare": "https://github.com/ds300/patch-package/issues/84#issuecomment-1096372498",
    "how to use bundleDependencies with prepare, why harmful for PROD": "https://github.com/ds300/patch-package/pull/270#issuecomment-1409156248"
  },
  "### bundleDependencies": [
    "read-config-ng"
  ],
